<div class="product-details">
  <h1>Delete Product</h1>
  <h4>Name:</h4>
  <p><%= @product_name %></p>
  <div class="description">
    <h4>Description</h4>
    <p><%= @product_description %></p>
  </div>

  <p class="confirmation-message">Are you sure you want to delete this product?</p>

<%= form_with(model: @product, url: destroy_admin_product_path(@product), method: :delete) do |form| %>
  <%= form.submit "Delete", class: " remove-button" %>
  <%= link_to "Cancel", admin_path, class: "cancel-button" %>
<% end %>
</div>


