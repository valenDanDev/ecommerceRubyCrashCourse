<!-- app/views/orders/show.html.erb -->
<%= stylesheet_link_tag "newShipping.css" %>
<div class="order-details-container">
  <% if @order.order_items.any? %>
    <% total_quantity = 0 %>
    <% @order.order_items.each do |order_item| %>
      <% total_quantity += order_item.quantity %>
    <% end %>
    <h1 class="h1-shipping">Checkout (<%= total_quantity %> items)</h1>
  <% else %>
    <p class="p-shipping">No items found for this order.</p>
  <% end %>
  <p class="p-shipping">Date: <%= @order.order_date %></p>
  <p class="p-shipping">Total Price: <%= @order.total_price %></p>
</div>
